<Window x:Class="Reciepe.SearchDialogue"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Reciepe"
        mc:Ignorable="d"
        Title="SearchDialogue" Height="164" Width="591">
    <Grid Margin="0,0,2,0">
        <Label Content="Search: " HorizontalAlignment="Left" VerticalAlignment="Top" Margin="39,45,0,0" Height="31" Width="54"/>
        <TextBox x:Name="SearchInput" HorizontalAlignment="Left" Height="27" Margin="122,49,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="428"/>
        <Label Content="Please seperate each key word by ';'. ie: salt, sugar, dinner" HorizontalAlignment="Left" Margin="39,91,0,0" VerticalAlignment="Top" Height="29" Width="477"/>

    </Grid>
</Window>
